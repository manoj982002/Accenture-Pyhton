def is_prime(n):
    if n <= 1:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

start = int(input("Enter the start of the range: "))
end = int(input("Enter the end of the range: "))

smallest_prime = None
primes = []

for num in range(start, end + 1):
    if is_prime(num):
        primes.append(num)
        if smallest_prime is None:
            smallest_prime = num

if smallest_prime is not None:
    print("Smallest prime number in the range:", smallest_prime)
    print("All prime numbers in the range:", primes)
else:
    print("There are no prime numbers in the given range.")
